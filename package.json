{
  "name": "node-postgres-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate project for Node.js, Express, PostgreSQL, Drizzle ORM, and Vitest",
  "type": "module",
  "main": "dist/app.js",
  "license": "MIT",
  "author": {
    "name": "Yogendra Rana",
    "email": "yogendrarana4321@gmail.com",
    "website": "https://yogendrarana.vercel.app/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yogendrarana/node-postgres-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "drizzle",
    "orm",
    "vitest",
    "boilerplate"
  ],
  "scripts": {
    "compile": "tsc",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "test": "vitest --coverage",
    "dev": "concurrently \"npx tsc -w\" \"sleep 3 && nodemon dist/server.js\"",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio --port 4000"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.30.10",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.7",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.21.1",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}